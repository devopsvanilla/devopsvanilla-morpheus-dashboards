{
  "name": "Morpheus Plugin Development",
  "image": "mcr.microsoft.com/devcontainers/java:17",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installGradle": true,
      "gradleVersion": "7.6"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "marlon407.code-groovy",
        "nicolasvuillamy.vscode-groovy-lint",
        "vscjava.vscode-java-pack",
        "vscjava.vscode-gradle",
        "redhat.java",
        "vscjava.vscode-java-dependency",
        "vscjava.vscode-java-test",
        "vscjava.vscode-maven",
        "sonarsource.sonarlint-vscode",
        "streetsidesoftware.code-spell-checker",
        "esbenp.prettier-vscode",
        "editorconfig.editorconfig",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-pull-request-github",
        "github.vscode-github-actions",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "donjayamanne.githistory",
        "ms-vscode.vscode-typescript-next",
        "dbaeumer.vscode-eslint",
        "christian-kohler.path-intellisense",
        "visualstudioexptteam.vscodeintellicode",
        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",
        "piotrpalarz.vscode-gitignore-generator",
        "maciejdems.add-to-gitignore",
        "redhat.fabric8-analytics"
      ],
      "settings": {
        // Java Settings
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-17",
            "path": "/usr/local/sdkman/candidates/java/17.0.17-ms",
            "default": true
          }
        ],
        "java.compile.nullAnalysis.mode": "automatic",
        "java.configuration.updateBuildConfiguration": "automatic",
        // Gradle Settings
        "gradle.nestedProjects": true,
        "java.import.gradle.home": "/usr/local/sdkman/candidates/gradle/current",
        // Groovy Settings
        "groovy.classpath": [
          "${workspaceFolder}/build/classes",
          "${workspaceFolder}/morpheus-home-dashboard-plugin/build/classes"
        ],
        // Editor Settings
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        // File Associations
        "files.associations": {
          "*.gradle": "groovy",
          "gradlew": "shellscript"
        },
        // Terminal
        "terminal.integrated.defaultProfile.linux": "bash",
        // Git
        "git.autofetch": true,
        "git.enableSmartCommit": true,
        // Run GitHub-related extensions on the UI (host) side to reuse host auth
        "remote.extensionKind": {
          "github.copilot": "ui",
          "github.copilot-chat": "ui",
          "github.vscode-pull-request-github": "ui",
          "github.vscode-github-actions": "ui"
        }
      }
    }
  },
  "initializeCommand": "bash -lc 'mkdir -p ${localEnv:HOME}/.ssh ${localEnv:HOME}/.config/gh'",
  "postCreateCommand": "bash -c 'sudo chown -R vscode:vscode /home/vscode/.gradle /home/vscode/.m2 && chmod +x gradlew && ./gradlew --version && git config --global --add safe.directory ${containerWorkspaceFolder}'",
  "postStartCommand": "bash -c '[ -f /tmp/.host-gitconfig ] && cp /tmp/.host-gitconfig ~/.gitconfig || true'",
  "remoteUser": "vscode",
  "mounts": [
    // Named volumes for build caches - best performance and reliability
    "source=vscode-gradle,target=/home/vscode/.gradle,type=volume",
    "source=vscode-m2,target=/home/vscode/.m2,type=volume",
    // Copy Git config to temp location (will be copied to home in postStartCommand)
    "source=${localEnv:HOME}/.gitconfig,target=/tmp/.host-gitconfig,type=bind,consistency=cached,readonly",
    // Inherit WSL host auth (SSH, GitHub CLI)
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.config/gh,target=/home/vscode/.config/gh,type=bind,consistency=cached"
  ],
  "forwardPorts": [
    8080,
    3000
  ]
}
